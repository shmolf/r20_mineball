{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "no-use-before-define": ["error", {"functions": false, "classes": false}],
        "prefer-destructuring": "warn",
        "max-len": [2, 120, 4]
    },
    "ignorePatterns": ["webpack.config.js", "**/vendor/*.js"],
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.js",
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
